{
  "name": "wwa",
  "version": "1.0.0",
  "description": "World Water Atlas",
  "author": "Fedor Baart <fedor.baart@deltares.nl>",
  "private": true,
  "scripts": {
    "dev": "npm-run-all build:assets dev:data dev:app",
    "dev:app": "nuxt",
    "dev:data": "cross-env UNPUBLISHED=1 dato dump",
    "build": "npm-run-all build:data build:assets",
    "build:app": "cross-env NODE_ENV=production nuxt build",
    "build:data": "npm run data:build",
    "build:assets": "cpy ./components/*/assets/*.* ./static/assets",
    "start": "nuxt start",
    "generate": "cross-env NODE_ENV=production nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --ignore-pattern external . ",
    "lint:fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore --ignore-pattern external . ",
    "precommit": "npm run lint",
    "gh-pages:build": "cross-env DEPLOY_ENV=GH_PAGES nuxt build",
    "gh-pages:generate": "cross-env DEPLOY_ENV=GH_PAGES nuxt generate",
    "gh-pages:data": "npm run build:data",
    "gh-pages:deploy": "gh-pages -t -d dist",
    "surge:deploy": "surge dist www.worldwateratlas.org",
    "deploy:gh-pages": "npm-run-all gh-pages:data gh-pages:generate gh-pages:deploy",
    "deploy:surge": "npm-run-all build generate surge:deploy",
    "data:build": "dato dump",
    "data:dev": "cross-env UNPUBLISHED=1 dato dump",
    "data:backup": "dato dump --config dato.backup.js",
    "data:books": "cross-env DATO_EXPORT=books dato dump",
    "data:chapters": "cross-env DATO_EXPORT=chapters dato dump",
    "data:keywords": "cross-env DATO_EXPORT=keywords dato dump",
    "data:influences": "cross-env DATO_EXPORT=influences dato dump",
    "data:static-pages": "cross-env DATO_EXPORT=static_pages dato dump",
    "data:themes": "cross-env DATO_EXPORT=themes dato dump",
    "serve": "npm-run-all serve:generate serve:serve",
    "serve:generate": "npm run generate",
    "serve:serve": "http-server ./dist -p 9920",
    "test": "ava"
  },
  "config": {
    "nuxt": {
      "port": "9920"
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "dependencies": {
    "axios": "0.18.0",
    "d3-jetpack": "2.0.19",
    "d3-scale": "^1.0.7",
    "d3-scale-chromatic": "^1.2.0",
    "es6-tween": "^5.1.0",
    "lodash.get": "^4.4.2",
    "marked": "0.5.1",
    "normalize.css": "8.0.0",
    "nuxt": "2.2.0",
    "orbit-controls-es6": "^1.0.10",
    "portal-vue": "1.4.0",
    "smoothscroll-polyfill": "0.4.3",
    "three": "^0.89.0",
    "three.meshline": "^1.0.3"
  },
  "devDependencies": {
    "autoprefixer": "9.3.1",
    "ava": "0.25.0",
    "babel-eslint": "10.0.1",
    "babel-preset-env": "1.7.0",
    "canvas": "2.0.1",
    "circular-json": "0.5.9",
    "copy-webpack-plugin": "4.6.0",
    "cpy-cli": "2.0.0",
    "cross-env": "5.2.0",
    "datocms-client": "0.3.41",
    "eslint": "5.8.0",
    "eslint-config-standard": "12.0.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-html": "4.0.6",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "gh-pages": "2.0.1",
    "http-server": "0.11.1",
    "imports-loader": "0.8.0",
    "jsdom": "13.0.0",
    "json-stringify-safe": "5.0.1",
    "lodash": "4.17.11",
    "mkdirp": "0.5.1",
    "npm-run-all": "4.1.3",
    "postcss": "7.0.5",
    "postcss-calc": "7.0.1",
    "postcss-custom-properties": "8.0.9",
    "postcss-import": "12.0.1",
    "slug": "0.9.2",
    "surge": "^0.20.1",
    "uglifyjs-webpack-plugin": "2.0.1",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-glsl-loader": "^1.0.1"
  }
}
