{
  "name": "wwa",
  "version": "1.0.0",
  "description": "World Water Atlas",
  "author": "Fedor Baart <fedor.baart@deltares.nl>",
  "private": true,
  "scripts": {
    "predev": "npm run data:dev",
    "dev": "nuxt",
    "prebuild": "npm run data:build",
    "build": "cross-env NODE_ENV=production nuxt build",
    "start": "nuxt start",
    "generate": "cross-env NODE_ENV=production nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --ignore-pattern external/globe . ",
    "precommit": "npm run lint",
    "globe": "npm-run-all globe:install globe:data globe:build",
    "globe:install": "npm install --prefix external/globe",
    "globe:data": "npm run data:globe",
    "globe:build": "npm run build --prefix external/globe",
    "gh-pages:build": "cross-env DEPLOY_ENV=GH_PAGES nuxt build",
    "gh-pages:generate": "cross-env DEPLOY_ENV=GH_PAGES nuxt generate",
    "gh-pages:data": "npm run data:build",
    "gh-pages:deploy": "gh-pages -t -d dist",
    "deploy:gh-pages": "npm-run-all gh-pages:data gh-pages:generate gh-pages:deploy",
    "data:dev": "cross-env UNPUBLISHED=1 dato dump",
    "data:build": "dato dump",
    "data:books": "cross-env DATO_EXPORT=books dato dump",
    "data:chapters": "cross-env DATO_EXPORT=chapters dato dump",
    "data:globe": "cross-env DATO_EXPORT=globe dato dump",
    "data:keywords": "cross-env DATO_EXPORT=keywords dato dump",
    "data:influences": "cross-env DATO_EXPORT=influences dato dump",
    "data:themes": "cross-env DATO_EXPORT=themes dato dump",
    "test": "ava"
  },
  "config": {
    "nuxt": {
      "port": "9920"
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "axios": "0.17.1",
    "d3-jetpack": "^2.0.16",
    "d3-scale": "^1.0.7",
    "d3-scale-chromatic": "^1.2.0",
    "es6-tween": "^5.1.0",
    "font-awesome": "^4.7.0",
    "nuxt": "^1.3.0",
    "orbit-controls-es6": "^1.0.10",
    "slug": "0.9.1",
    "three": "^0.89.0"
  },
  "devDependencies": {
    "ava": "0.24.0",
    "babel-eslint": "^7.2.3",
    "canvas": "^1.6.9",
    "circular-json": "0.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "cross-env": "^5.1.3",
    "datocms-client": "0.3.41",
    "eslint": "^4.15.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "gh-pages": "^1.1.0",
    "imports-loader": "^0.7.1",
    "jsdom": "11.5.1",
    "json-stringify-safe": "5.0.1",
    "lodash": "^4.17.4",
    "npm-run-all": "4.1.2",
    "postcss": "^6.0.16",
    "postcss-calc": "6.0.1",
    "postcss-custom-properties": "6.2.0",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack-bundle-analyzer": "^2.9.2",
    "webpack-glsl-loader": "^1.0.1"
  }
}
