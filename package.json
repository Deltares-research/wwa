{
  "name": "wwa",
  "version": "1.0.0",
  "description": "World Water Atlas",
  "author": "Fedor Baart <fedor.baart@deltares.nl>",
  "private": true,
  "scripts": {
    "predev": "npm run data:dev",
    "dev": "nuxt",
    "prebuild": "npm run data:build",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --ignore-pattern external/globe . ",
    "precommit": "npm run lint",
    "globe": "npm-run-all globe:install globe:data globe:build",
    "globe:install": "npm install --prefix external/globe",
    "globe:data": "npm run data:globe",
    "globe:build": "npm run build --prefix external/globe",
    "build:gh-pages": "cross-env DEPLOY_ENV=GH_PAGES nuxt build",
    "generate:gh-pages": "cross-env DEPLOY_ENV=GH_PAGES nuxt generate",
    "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup",
    "data:dev": "cross-env UNPUBLISHED=1 dato dump",
    "data:build": "dato dump",
    "data:chapters": "cross-env DATO_EXPORT=chapters dato dump",
    "data:globe": "cross-env DATO_EXPORT=globe dato dump",
    "data:books": "cross-env DATO_EXPORT=books dato dump",
    "test": "ava"
  },
  "config": {
    "nuxt": {
      "port": "9920"
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "nuxt": "^1.0.0",
    "three": "^0.89.0"
  },
  "devDependencies": {
    "ava": "0.24.0",
    "babel-eslint": "^7.2.3",
    "canvas": "^1.6.9",
    "circular-json": "0.5.1",
    "cross-env": "^5.1.3",
    "dato": "1.0.5",
    "datocms-client": "0.3.41",
    "eslint": "^4.15.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "gh-pages": "^1.1.0",
    "jsdom": "11.5.1",
    "json-stringify-safe": "5.0.1",
    "npm-run-all": "4.1.2",
    "postcss": "^6.0.16",
    "postcss-calc": "6.0.1",
    "postcss-custom-properties": "6.2.0",
    "push-dir": "^0.4.1",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack-bundle-analyzer": "^2.9.2"
  }
}
